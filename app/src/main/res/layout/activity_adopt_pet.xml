<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/adoptPet_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:background="@drawable/pic8"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:background="@color/color1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
     <TextView
         android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:typeface="serif"
        android:textColor="@color/color2"
        android:text="Enter Pet Category *" />
    <EditText
        android:id="@+id/search_petCategory"
        android:hint="e.g Dog"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:background="@drawable/edittext_bg2"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/color1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:typeface="serif"
            android:textColor="@color/color2"
            android:text="Enter Pet Species" />
        <EditText
            android:id="@+id/search_petSpecies"
            android:hint="e.g Affenpinscher"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/edittext_bg2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/color1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:typeface="serif"
            android:textColor="@color/color2"
            android:text="Choose Gender" />
        <RadioGroup
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/male"
                android:typeface="serif"
                android:text="Male"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/female"
                android:typeface="serif"
                android:text="Female"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:background="@color/color1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:typeface="serif"
            android:textColor="@color/color2"
            android:text="Select State *" />

        <Spinner
            android:id="@+id/location_search_state_spinner"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/edittext_bg2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/color1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:typeface="serif"
                    android:textColor="@color/color2"
                    android:text="City *" />

                <EditText
                    android:id="@+id/location_search_city"
                    android:hint="e.g Dwarka"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:background="@drawable/edittext_bg2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/color1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:typeface="serif"
                    android:textColor="@color/color2"
                    android:text="Pincode *" />

                <EditText
                    android:id="@+id/location_search_pincode"
                    android:hint="e.g 110040"
                    android:inputType="number"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:background="@drawable/edittext_bg2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/SearchButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:typeface="serif" />


    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>